                                <div class="row header">
                                    <div class="cell">
                                        Project Name
                                    </div>
                                    <div class="cell">
                                        Start Date
                                    </div>
                                    <div class="cell">
                                        End Date
                                    </div>
                                    <div class="cell">
                                        Action
                                    </div>

                                </div>

                                {% for task in tasks %}

                                <div class="row">
                                    <div class="cell" data-title="Project Name">
                                        {{ task.projectName }}
                                    </div>
                                    <div class="cell" data-title="Start Date">
                                        {{ task.startDate|date('d/m/Y') }}
                                    </div>
                                    <div class="cell" data-title="End Date">
                                        {{ task.endDate|date('d/m/Y') }}
                                    </div>
                                    <div class="cell" data-title="Actions">

                                        <a href="{{ path('edit_project', {'taskId':task.id}) }}" class="btn btn-success"> Edit </a>
                                        <a href="#" class="btn btn-default"> Add Entry </a>

